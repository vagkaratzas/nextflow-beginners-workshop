params {
    input            = 'assets/proteins_50K.fasta.gz'
    fasta_chunk_size = 10000
    length_threshold = 110
}

profiles {
    conda {
        conda.enabled           = true
        conda.channels          = ['conda-forge', 'bioconda']
    }
    docker {
        docker.enabled          = true
        docker.runOptions       = '-u $(id -u):$(id -g)'
    }
    singularity {
        singularity.enabled     = true
        singularity.autoMounts  = true
    }
}
